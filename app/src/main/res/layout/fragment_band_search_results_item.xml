<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/motd_cardview"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    cardview:cardCornerRadius="10dp"
    cardview:cardElevation="10dp"
    cardview:cardBackgroundColor="@color/colorPrimary"
    cardview:cardUseCompatPadding="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_results_band_logo"
            android:layout_gravity="center"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_results_band_name"
            android:text="@string/search_results_band_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_results_band_genre"
            android:text="@string/search_results_band_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_results_band_origin"
            android:text="@string/search_results_band_origin"/>

    </LinearLayout>


</android.support.v7.widget.CardView>